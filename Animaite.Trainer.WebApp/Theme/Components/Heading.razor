@code {

    public enum HeadingSize
    {
        H1,
        H2,
        H3,
        H4,
        H5,
        H6
    }

    [Parameter]
    public HeadingSize Size { get; set; } = HeadingSize.H1;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}

@{
    switch (Size)
    {
        case HeadingSize.H1:
            <h1>@ChildContent</h1>
            break;
        case HeadingSize.H2:
            <h2>@ChildContent</h2>
            break;
        case HeadingSize.H3:
            <h3>@ChildContent</h3>
            break;
        case HeadingSize.H4:
            <h4>@ChildContent</h4>
            break;
        case HeadingSize.H5:
            <h5>@ChildContent</h5>
            break;
        case HeadingSize.H6:
            <h6>@ChildContent</h6>
            break;
    }
}